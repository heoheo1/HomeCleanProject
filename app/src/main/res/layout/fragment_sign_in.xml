<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInFragment"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/login_anim3"
            android:layout_width="298dp"
            android:layout_height="450dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:background="@drawable/backgroundcolor"
            android:padding="10dp"
            android:layout_marginLeft="13dp"
            >

        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_anim4"
            android:layout_width="298dp"
            android:layout_height="450dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:background="@drawable/backgroundcolor"
            android:padding="15dp"

            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:text="회원 가입"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="실제 존재하는 이메일을 입력해야 비밀번호를 찾을수 있습니다."
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:fontFamily="@font/font">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/intro_background"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email_24"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="12dp"
                    />
                <EditText
                    android:id="@+id/edt_SignEmail"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="이메일"
                    android:inputType="textEmailAddress"
                    android:background="@null"
                    android:paddingLeft="40dp"
                    android:textColorHint="#999999"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/intro_background"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lock"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="12dp"
                    />


                <EditText
                    android:id="@+id/edt_SignPassword"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:paddingLeft="40dp"
                    android:textColorHint="#999999"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/intro_background"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lock"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="12dp"
                    />


                <EditText
                    android:id="@+id/edt_SignPasswordCheck"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:paddingLeft="40dp"
                    android:textColorHint="#999999"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_SingIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTintMode="add"
                android:text="회원가입"
                android:background="@drawable/button_color"
                android:elevation="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>